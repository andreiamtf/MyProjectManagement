@model TaskMA.Models.Employee

@{
    ViewBag.Title = "Delete";
}

<div class="page-header">
    <h3 id="navbar">Delete</h3>
</div>

<div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert"><span class="glyphicon glyphicon-remove"></span></button>
    <h4>Warning!</h4>
    <p>Are you sure you want to delete this?</p>
</div>


<table class="table table-striped table-hover ">
    <tr class="content">
        <th class="content">
            Employee Name
        </th>
        <th class="content">
            Birth Date
        </th>
        <th class="content">
            Email
        </th>
        <th class="Description">
            Phone Number
        </th>
        <th class="Description">
            Job
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.EmpName)
        </td>
        <td>
            @Html.DisplayFor(model => model.BirthDate)
        </td>

        <td>
            @Html.DisplayFor(model => model.Email)
        </td>
        <td>
            @Html.DisplayFor(model => model.PhoneNumber)
        </td>

        <td>
            @Html.DisplayFor(model => model.Job)
        </td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default btn-sm" />
    </div>
}

