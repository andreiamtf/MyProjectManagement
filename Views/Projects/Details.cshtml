@model TaskMA.Models.Project

@{
    ViewBag.Title = "Details";
}

<div class="page-header">
    <h3 id="navbar">Details</h3>
</div>


<table class="table table-striped table-hover ">
    <tr class="content">
        <th class="Description">
            Project Name
        </th>
        <th class="Description">
            Description
        </th>
    </tr>


    <tr>
        <td>
            @Html.DisplayFor(model => model.ProjectName)
        </td>

        <td>
            @Html.DisplayFor(model => model.ProjectDescription)
        </td>
    </tr>

</table>


<p>
    <div id="Edit">
        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Edit", "Projects", new { id = Model.ProjectId })';return false;">Edit</button>
    </div>
</p>

